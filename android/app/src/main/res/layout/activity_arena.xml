<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.ArenaActivity">

    <!-- Robot Info -->
    <LinearLayout
        android:id="@+id/robotInfoBox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRobotLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/robot_status_label"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRobotStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/robot_status_unknown"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="#EEE"/>

        </LinearLayout>

        <!-- Coordinates -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordinates: " />

            <TextView
                android:id="@+id/tvRobotCoord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0,0)" />
        </LinearLayout>

        <!-- Direction -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direction: " />

            <TextView
                android:id="@+id/tvRobotDir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N" />
        </LinearLayout>
    </LinearLayout>

    <!-- Input + Generate Button -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etObstacleCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Enter number of obstacles" />

        <Button
            android:id="@+id/btnGenerateMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Menu" />
    </LinearLayout>

    <!-- Spinner + Preview -->
    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/spObstacleSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivObstaclePreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Obstacle Preview" />
    </LinearLayout>

    <!-- Arena + Buttons Row -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <com.example.mdpapp.views.ArenaView
            android:id="@+id/arenaView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <GridLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center"
            android:rowOrderPreserved="false"
            android:layout_margin="16dp">

            <!-- Empty top-left -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <!-- Forward button -->
            <Button
                android:id="@+id/btnForward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/forward" />

            <!-- Empty top-right -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <!-- Left button -->
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/turn_left" />

            <!-- Empty center (no stop button) -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <!-- Right button -->
            <Button
                android:id="@+id/btnRight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/turn_right" />

            <!-- Empty bottom-left -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <!-- Reverse button -->
            <Button
                android:id="@+id/btnReverse"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/reverse" />

            <!-- Empty bottom-right -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />

        </GridLayout>
    </LinearLayout>

</LinearLayout>
