<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.mdpapp.views.ArenaView
        android:id="@+id/arenaView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Robot Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/robotInfoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRobotLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/robot_status_label"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRobotStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEE"
                    android:padding="8dp"
                    android:text="@string/robot_status_unknown"
                    android:textSize="18sp" />
            </LinearLayout> <!-- Coordinates -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordinates: " />

                <TextView
                    android:id="@+id/tvRobotCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0,0)" />
            </LinearLayout> <!-- Direction -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direction: " />

                <TextView
                    android:id="@+id/tvRobotDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N" />
            </LinearLayout>
        </LinearLayout> <!-- Input + Generate Button -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etObstacleCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter number of obstacles"
                    android:inputType="number"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btnGenerateMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate Menu" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/glObstaclePreviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">
            </GridLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:rowOrderPreserved="false"> <!-- Empty top-left -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" /> <!-- Forward button -->
            <Button
                android:id="@+id/btnForward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/forward" /> <!-- Empty top-right -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" /> <!-- Left button -->
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/turn_left" /> <!-- Empty center (no stop button) -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" /> <!-- Right button -->
            <Button
                android:id="@+id/btnRight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/turn_right" /> <!-- Empty bottom-left -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" /> <!-- Reverse button -->
            <Button
                android:id="@+id/btnReverse"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/reverse" /> <!-- Empty bottom-right -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </GridLayout>
        <!-- Obstacle Previews Grid -->
    </LinearLayout>
</LinearLayout>