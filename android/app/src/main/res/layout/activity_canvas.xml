<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bs_gradient"
    tools:context=".CanvasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingStart="36dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/bsLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/bs_logo" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ROBOT ARENA"
            android:textStyle="bold"
            android:textColor="@color/bs_white"
            android:textSize="36sp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/bsLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="18dp"
            android:fontFamily="@font/lilita_one"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/halfScreen">

        <com.mdp19.forever19.canvas.CanvasView
            android:id="@+id/canvasView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.mdp19.forever19.canvas.RobotView
            android:id="@+id/robotView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/halfScreen"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/statusLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/robotStatusDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bs"
                android:backgroundTint="@null"
                app:backgroundTint="@null"   
                android:text="@string/robot_status_waiting"
                android:textColor="@color/bs_white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/purpleButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xyLayout">

            <!-- Row 1: Initialize + Send -->
            <LinearLayout
                android:id="@+id/buttonsRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnInitializeRobot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/initialize_robot"
                    android:background="@drawable/btn_bs_pill"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"                          
                    android:textColor="@color/bs_white"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/cornerRadius" />

                <Button
                    android:id="@+id/btnSendData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_data"
                    android:background="@drawable/btn_bs_pill"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"                          
                    android:textColor="@color/bs_white"
                    android:textStyle="bold"                    
                    app:cornerRadius="@dimen/cornerRadius" />
            </LinearLayout>

            <!-- Row 2: Save + Load (below Row 1) -->
            <LinearLayout
                android:id="@+id/buttonsRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSaveLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Layout"
                    android:background="@drawable/btn_bs_pill"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"                      
                    android:textColor="@color/bs_white"
                    android:textStyle="bold"                    
                    app:cornerRadius="@dimen/cornerRadius" />

                <Button
                    android:id="@+id/btnLoadLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Load Layout"
                    android:background="@drawable/btn_bs_pill"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"                    
                    android:textColor="@color/bs_white"
                    android:textStyle="bold"                    
                    app:cornerRadius="@dimen/cornerRadius" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnRobotStart"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_marginTop="22dp"

            android:background="@drawable/btn_bs_play"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="PLAY"
            android:textAllCaps="true"
            android:textColor="@color/bs_yellow_text"
            android:textStyle="bold"
            android:textSize="28sp"
            android:fontFamily="@font/lilita_one"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purpleButtonsLayout"/>


        <LinearLayout
            android:id="@+id/xyLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusLayout">

            <EditText
                android:id="@+id/inputX"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:hint="@string/x_coordinate"
                android:inputType="number"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/inputY"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:hint="@string/y_coordinate"
                android:inputType="number"
                android:textSize="18sp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/spinnerRobotFacing"
                android:layout_width="120dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/messagesLayout"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/panel_bs"
            android:padding="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/btnRobotStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chatPanel"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BATTLE LOG"
                android:textStyle="bold"
                android:textColor="@color/bs_white"
                android:textSize="14sp"
                android:paddingStart="6dp"
                android:paddingBottom="6dp"/>

            <ScrollView
                android:id="@+id/ReceiveMsgScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/ReceiveMsgTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bs_white"
                    android:textSize="14sp"/>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatPanel"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/panel_bs"
            android:padding="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/btnRobotStart"
            app:layout_constraintStart_toEndOf="@id/messagesLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAT"
                android:textStyle="bold"
                android:textColor="@color/bs_white"
                android:textSize="14sp"
                android:paddingStart="6dp"
                android:paddingBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/chatInputBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/input_bs"
                    android:hint="Say Something..."
                    android:textColor="#1B2540"
                    android:textColorHint="#647095"
                    android:textSize="14sp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="8dp"
                    android:textSize="13sp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/bs_white"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:textStyle="bold"
                    android:background="@drawable/btn_bs_send" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />


</androidx.constraintlayout.widget.ConstraintLayout>