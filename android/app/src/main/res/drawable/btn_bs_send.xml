<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="16dp"/>
            <gradient 
                android:startColor="#1A2A6C" 
                android:endColor="#162252" 
                android:angle="270"/>
            <stroke android:width="3dp" android:color="#0D1333"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp"/>
            <gradient 
                android:startColor="#233E8B" 
                android:endColor="#1A2A6C" 
                android:angle="270"/>
            <stroke android:width="3dp" android:color="#0D1333"/>
        </shape>
    </item>
</selector>
